{
    "tasks": [
        {
            "type": "shell",
            "label": "meteo_clean_workspace",
            "command": "/usr/bin/make",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}/meteo"
            }
        },
        {
            "type": "shell",
            "label": "meteo_make_everything",
            "command": "/usr/bin/make",
            "args": ["debug"],
            "options": {
                "cwd": "${workspaceFolder}/meteo"
            }
        },
        {
            "type": "shell",
            "label": "meteo_make_everything_release",
            "command": "/usr/bin/make",
            "args": ["release"],
            "options": {
                "cwd": "${workspaceFolder}/meteo"
            }
        },
        {
            "label": "meteo_clean_and_build",
            "dependsOn": [
                "meteo_clean_workspace",
                "meteo_make_everything"
            ]
        },
        {
            "label": "meteo_clean_and_build_release",
            "dependsOn": [
                "meteo_clean_workspace",
                "meteo_make_everything_release"
            ]
        }
    ],
    "version": "2.0.0"
}

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Meteo: Build and Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/meteo/build/meteo.elf",
            "args": ["-c", "/home/locchan/dev/HW-Tinkering/meteo/cfg/config.cfg", "-d", "-o", "/tmp/offload_test"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "meteo_clean_and_build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Meteo: Launch tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/meteo/build/test/tests.elf",
            "args": ["--debug=gdb"],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "gdb",
            "request": "attach",
            "name": "Meteo: Attach debugger to tests",
            "executable": "${workspaceFolder}/meteo/build/test/tests.elf",
            "target": "127.0.0.1:1234",
            "remote": true,
            "cwd": "${workspaceRoot}", 
            "gdbpath": "/usr/bin/gdb",
        },
        
    ],
    "compounds": [
        {
          "name": "Meteo: Build and launch tests",
          "configurations": ["Meteo: Launch tests", "Meteo: Attach debugger to tests"],
          "preLaunchTask": "meteo_clean_and_build",
          "stopAll": true
        }
      ]
}
